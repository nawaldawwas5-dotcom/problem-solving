#include <iostream>
using namespace std;

int addNums(int a, int b) {
    int r = a + b;
    return r;
}

int subNums(int a, int b) {
    return a - b;
}

int mulNums(int x, int y) {
    int tmp = x * y;
    return tmp;
}

int modNums(int a, int b) {
    return a % b;
}

int sq(int n) {
    int s = n * n;
    return s;
}

int doEncrypt(int x) {
    int s1 = sq(x);
    int s2 = mulNums(s1, 3);
    int s3 = addNums(s2, 7);
    int s4 = modNums(s3, 100);
    int s5 = subNums(s4, 4);
    return s5;
}

void encryptList(int arr[], int n) {
    int idx = 0;
    while (idx < n) {
        arr[idx] = doEncrypt(arr[idx]);
        idx++;
    }
}

int main() {
    int arr[] = {4, 7, 10, 12};
    int n = 4;

    cout << "Original array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    encryptList(arr, n);

    cout << "Encrypted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
